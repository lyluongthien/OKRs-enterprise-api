{
  "name": "okrs-enterprise-api",
  "version": "0.0.1",
  "description": "OKRs Tool for startup",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Olympus Team",
    "email": "nhattq.coding@gmail.com",
    "url": "https://flame.okr.vn"
  },
  "homepage": "https://github.com/Olympus-Team/OKRs-enterprise-api#readme",
  "bugs": {
    "url": "https://github.com/Olympus-Team/OKRs-enterprise-api/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest build --webpack --webpackPath webpack-hmr.config.js",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "lint:format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:prettier": "prettier --write --loglevel warn",
    "lint:eslint": "eslint \"src/**/*.ts\" \"test/**/*.ts\" --ignore-path .gitignore . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "doc:generate": "npx compodoc -p tsconfig.json -n 'Nest api boilerplate documentation'",
    "doc:serve": "npx compodoc -s --port 9000",
    "migration:create": "typeorm migration:create -n",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert"
  },
  "engines": {
    "node": ">=12.18.1"
  },
  "gitHooks": {
    "pre-commit": "ls-lint && lint-staged",
    "commit-msg": "node scripts/verifyCommitMsg.js"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/typeorm": "7.0.0",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "generate-password": "^1.5.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "nodemailer": "^6.4.10",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.9.0",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.3",
    "@types/generate-password": "^1.5.0",
    "@types/jest": "26.0.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.5.0",
    "@typescript-eslint/parser": "3.0.2",
    "chalk": "^4.1.0",
    "conventional-changelog-cli": "^2.0.34",
    "eslint": "7.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6",
    "webpack-node-externals": "^1.7.2",
    "yorkie": "^2.0.0"
  }
}
